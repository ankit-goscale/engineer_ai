<% content_for :custom_javascript do %>
<script type="text/javascript">
  $(document).ready(function() {
    $('.dt_table').DataTable();
} );
</script>
<% end %>
<%- model_class = TvChannel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <div class="pull-left">
    <%= link_to t('.Channels', :default => t("helpers.links.channel")), tv_channels_path, :class => 'btn btn-info' %>
    <%= link_to t('.Tv_shows', :default => t("helpers.links.tv_shows")), tv_shows_path, :class => 'btn btn-default' %>
  </div>
</div>
<table class="dt_table table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tv_channels.each do |tv_channel| %>
      <tr>
        <td><%= link_to tv_channel.id, tv_channel_path(tv_channel) %></td>
        <td><%= tv_channel.name %></td>
        <td><%= tv_channel.description %></td>
        <td><%=l tv_channel.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      tv_channel_path(tv_channel), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

