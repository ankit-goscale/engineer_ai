<%- model_class = TvShow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tv_show.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
  <dd><%= @tv_show.start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @tv_show.end_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tv_channel_id) %>:</strong></dt>
  <dd><%= @tv_show.tv_channel.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tv_shows_path, :class => 'btn btn-default'  %>
