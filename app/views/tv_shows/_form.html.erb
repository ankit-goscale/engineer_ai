<%= form_for @tv_show, :html => { :class => "form-horizontal tv_show" } do |f| %>
  <%= f.hidden_field :tv_channel_id, val: 1 %>
  <% if @tv_show.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tv_show.errors.count, "error") %> prohibited this tv_show from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tv_show.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :start_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%#= f.text_field :start_time, :class => 'form-control' %>
      <%= f.datetime_select(:start_time, :default => { :hour => 23, :minute => 59 }, :class => 'form-control' ) %>
    </div>
    <%=f.error_span(:start_time) %>
  </div>
  <div class="form-group">
    <%= f.label :end_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%#= f.text_field :end_time, :class => 'form-control' %>
      <%= f.datetime_select(:end_time, :default => { :hour => 23, :minute => 59 }, :class => 'form-control' ) %>
    </div>
    <%=f.error_span(:end_time) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tv_shows_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
